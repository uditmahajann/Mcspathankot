---
import Layout from '../../layouts/Layout.astro';
import AnnualCalendarHero from '../../components/sections/curriculumpage/AnnualCalendarHero';
import AnnualCalendarSection from '../../components/sections/curriculumpage/AnnualCalendar';
import { client } from "../../lib/sanity";

const calendarEvents = await client.fetch(`
  *[_type == "annualCalendar"] | order(date asc) {
    _id,
    title,
    description,
    category,
    date,
    time,
    location,
    audience
  }
`);

---

<Layout
  title="Academic Calendar | MCS Pathankot | Montessori Cambridge School | Top Boarding School in Pathankot, Punjab, North India"
  description="The annual calendar of Montessori Cambridge School (MCS) outlines academic sessions, holidays, examinations, activities, and key school dates."
  pubDate={new Date()}
  >
  
  <main>
    <AnnualCalendarHero />
    <AnnualCalendarSection events={calendarEvents} client:load/>

  </main>
  </Layout>
</body>
</html>
